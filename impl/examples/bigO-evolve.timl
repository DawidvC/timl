structure BigOEvolve = struct
open List

(* The following is the thought process of evoluting [map] from using precise time spec to using big-O time spec. *)

(* original version *)
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
        fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using $(m + 2) * $n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end

(* rewrite the time spec equivalently using a function-sort index [g] introduced by [absidx] *)
absidx g : Fun 2 = fn m n => $(m + 1) * $n with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
        fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using g m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end

(* refine [g]'s sort from [Fun 2] to [{g : Fun 2 | g O (fn m n => $m * $n)}], specifying that [g] must be of Big-O class O(m*n)  *)
absidx g : {g : Fun 2 | g O (fn m n => $m * $n)} = fn m n => $(m + 2) * $n with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
      fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using g m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end
      
(* sort [{g : Fun 2 | g O (fn m n => $m * $n)}] can be written as [BigO 2 (fn m n => $m * $n)] as a syntax sugar *)
absidx g : BigO 2 (fn m n => $m * $n) = fn m n => $(m + 2) * $n with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
      fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using g m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end

(* now the magic: [g]'s definition can be inferred! *)
absidx g : BigO 2 (fn m n => $m * $n) = _ with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
      fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using g m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end

(* [= _] in [absidx] can be omitted as a syntax sugar *)
absidx g : BigO 2 (fn m n => $m * $n) with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
        fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using g m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end
       
(* the magic goes further: even [h]'s BigO class can be inferred! *)
absidx h : BigO 2 _ (* (fn m n => $m * $n) *) with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
      fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using h m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end

(* another way to infer BigO class *)
idx h_spec : Fun 2 = _
absidx h : BigO 2 (* (fn m n => $m * $n) *)(* _ *) h_spec with
val ['a 'b] map =
 fn {m : Nat} (f : 'a -- $m --> 'b) =>
    let
      fun map {n : Nat} (ls : {n} (* _ *)'a list) return {n} (* _ *)'b list using h m n =
            case ls of
                Nil => Nil
              | Cons (x, xs) => Cons (f x, map xs)
    in
        map
    end
end

end

