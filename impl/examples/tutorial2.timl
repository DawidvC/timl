val add : int -- 0.0 --> int -- 1.0 --> int = fn (a : int) (b : int) => a + b

fun add (a : int) (b : int) return using 1.0 = a + b

(* datatype 'a list = *)
(*          Nil *)
(*        | Cons of 'a * 'a list *)

datatype {Nat} 'a list =
         Nil of unit -> {0} 'a list
       | Cons {n : Nat} of 'a * {n} 'a list -> {n + 1} 'a list
                          
