absidx {T : Fun 2 | T O _} with
fun ['a] ['b] map {m : Nat} (f : 'a -- $m --> 'b) =
   let
     fun map {n : Nat} (xs : {n} _ list) return {n} _ list using T m n =
         case xs return {n} _ list using T m n of
             Nil => Nil
           | Cons {n'} (x, xs) => Cons {_} (f x, map {_} xs)
   in
     map
   end
