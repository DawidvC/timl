structure List2 = struct

datatype list 'a : {Nat} =
         Nil of list 'a {0} 
       | Cons {n : Nat} of 'a * list 'a {n} --> list 'a {n + 1} 

val ['a] f = fn {n : Nat} (ls : list 'a {n}) return list _ {n} =>
           case ls of
               Nil => ls
             | Cons (x, xs) => Cons (x, xs)

fun map ['a 'b] {m n : Nat} (f : 'a -- $m --> 'b) (ls : list 'a {n}) return list 'b {n} using $(m + 3) * $n =
    case ls of
        Nil => Nil
      | Cons (x, xs) => Cons (f x, map f xs)
                            
