structure Basic = struct

datatype bool = true | false

(* indexed boolean *)
datatype ibool : {Bool} =
         True of ibool {true}
         | False of ibool {false}

datatype option 'a =
         NONE
         | SOME of 'a --> option 'a

datatype le {a b : Nat} =
         LE {a <= b} of le {a} {b}

open List2

type bool_list = list bool {10}
type bool_list2 = List2.list bool {10}
val bool_map = @map
val bool_map2 = @List2.map
                      
end
                    
